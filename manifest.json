{
  "name": "CYCARE",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Combat cyberbullying and provide a safe space for victims to recover",
  "homepage_url": "http://extensionizr.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "page": "src/bg/background.html",
    "persistent": true
  },
  "options_page": "src/options_custom/index.html",
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "browser action demo",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "permissions": [
    "clipboardRead",
    "clipboardWrite",
    "contentSettings",
    "contextMenus",
    "cookies",
    "notifications",
    "https://facebook.com/* ",
    " https://twitter.com/* ",
    " https://www.instagram.com/"
  ],

  "content_scripts": [
    {
      "matches": [
        "https://www.facebook.com/*",
        "https://www.instagram.com/*",
        "https://www.twitter.com/*"
      ],
      "css": [
        "src/inject/inject_fb.css",
        "src/inject/inject_inst.css",
        "src/inject/inject_twt.css"
      ]
    },
    {
      "matches": [
        "https://www.facebook.com/*",
        "https://www.instagram.com/*",
        "https://www.twitter.com/*"
      ],
      "js": [
        "src/inject/inject_fb.js",
        "src/inject/inject_inst.js",
        "src/inject/inject_twt.js"
      ]
    }
  ]
}